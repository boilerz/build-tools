{
  "name": "@boilerz/build-tools",
  "version": "1.3.0",
  "description": "Common build tools for JS/TS world.",
  "main": "index.js",
  "repository": "git@github.com:boilerz/build-tools.git",
  "author": "momsse",
  "license": "MIT",
  "private": false,
  "bin": {
    "copyReadme": "./copyReadme.js",
    "createPackageFile": "./createPackageFile.js",
    "transpileTS": "./transpileTS.js",
    "cleanDist": "./cleanDist.js",
    "buildTSPackage": "./buildTSPackage.js",
    "customBoilerplate": "./customBoilerplate.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build:package": "ts-node src/buildTSPackage.ts",
    "build:chmod": "chmod +x dist/*.js",
    "build": "yarn build:package && yarn build:chmod"
  },
  "devDependencies": {
    "@boilerz/eslint-config": "1.5.0",
    "@boilerz/prettier-config": "^1.0.0",
    "@boilerz/tsconfig": "^1.0.0",
    "@types/node": "^13.7.2",
    "eslint": "^6.1.0",
    "prettier": "^1",
    "ts-node": "^8.3.0",
    "typescript": "^3"
  },
  "greenkeeper": {
    "commitMessages": {
      "initialBadge": ":pencil: add Greenkeeper badge",
      "initialDependencies": ":arrow_up: update dependencies",
      "initialBranches": ":tada: whitelist greenkeeper branches",
      "dependencyUpdate": ":arrow_up: update ${dependency} to version ${version}",
      "devDependencyUpdate": ":arrow_up: update ${dependency} to version ${version}",
      "dependencyPin": ":pushpin: pin ${dependency} to ${oldVersion}",
      "devDependencyPin": ":pushpin: pin ${dependency} to ${oldVersion}"
    }
  }
}
